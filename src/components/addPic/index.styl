.img-area.large
    height: 120px
    padding: 0 0 20px 0
    display: flex
    box-sizing: border-box
    .add-pic
        width: 100px
        height 100px
        background-color: rgb(116,116,116)
        border-radius: 20px
        text-align: center
        font-size: 25px
        .at-icon 
            font-size: 60px                        
    .choose_pic
        width: 500px
        height: 100px
        margin-left: 20px
        box-sizing: border-box
        white-space: nowrap
        .pic-item
            width: 100px
            height: 100px
            border-radius: 20px
            margin-right: 15px
            box-sizing: border-box
            &.active
                border 3px solid rgb(100, 200, 100)
