.days-matter
    width: 100%
    height: 100%
    color: #ffffff
    font-size: 26px
    font-weight: 350
    position: relative
    transition: right
    .inner-moveable
        height: 100%
        position: absolute
        display: flex
        right: 0
        top: 0
        transition: right .4s ease
        &.slide-right
            right: -80vw
        .format-set
            width: 80vw
            height: 100%
            .format-set-wrapper
                width: 100%
                height: 100%
                background-color: rgba(0, 0, 0, .7)
                .header-wrapper
                    padding: 0 30px
                    .close-wrapper
                        height: 8vh
                        line-height: 8vh
                        border-bottom: 1px solid #aaa
                        .close
                            font-size: 50px
                            font-weight: 500
                .type-list
                    margin-bottom: 50px
                    .type-item-wrapper
                        padding: 0 30px
                        .type-item
                            position: relative
                            box-sizing: border-box
                            height: 6vh
                            line-height: 6vh
                            border-bottom: 1px solid rgb(60, 60, 60)
                            .type-icon
                                font-size: 30px
                                margin-right: 15px
                                &.checked
                                    height: 6vh
                                    line-height: 6vh
                                    position: absolute
                                    right: 0
                                    color: rgb(100, 200, 100)
                .format-area
                    box-sizing: border-box
                    padding: 0 30px
                    .title
                        height: 6vh
                        line-height: 6vh
                        .title-icon
                            font-size: 38px
                            margin-right: 15px
                .add
                    width: 80%
                    font-size: 35px
                    color: #fff
                    font-weight: 350
                    background: rgba(150, 150, 150, .7)
        .main-content
            width: 100vw
            height 100%
            .header
                display: flex;
                justify-content: space-between;
                padding: 0 5vw;
                line-height: 10vh;
                height: 10vh;
                background-color: rgb(230, 230, 230);
                color: rgb(160, 160, 160);
                .logo 
                    font-size: 40px; 
                    font-weight: 500;
                .add 
                    font-size: 30px
                    font-weight: 400
            .top-list
                margin-top: 50px
                .event-item
                    height: 22vh
                    padding-left: 5vw
                    display: flex
                    flex-direction: column
                    justify-content: center
                    box-sizing: border-box
                    .title
                        font-size: 50px;
                        font-weight: 400;
                    .daysNum
                        height: 9vh
                        position: relative
                        .dis
                            line-height: 9vh
                            font-size: 100px
                            font-weight: 800
                        .icon
                            background-color: rgb(210,50,50);
                            font-size: 22px;
                            margin-left: 15px;
                        .date
                            font-size: 30px;
                            font-weight: 200;
            .normal
                .event-item
                    box-sizing: border-box
                    height: 11vh
                    padding: 1vh 5vw
                    // display: flex
                    // flex-direction: column
                    // justify-content: space-between
                    .row
                        display: flex
                        justify-content: space-between
                        &.top-row
                            font-weight: 400
                            .title
                                display: flex
                                align-items: flex-end
                                font-size: 33px
                            .dis 
                                font-size: 50px
                                display: flex
                                align-items: flex-end
                        &.down-row
                            font-size: 27px
                            font-weight: 200





                    